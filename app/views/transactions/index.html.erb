<h1>Transactions#index</h1>
<p>Find me in app/views/transactions/index.html.erb</p>

<h1>こんにちは、<%= @username %>さん</h1>
<p>ユーザー用ページです。</p>

<%= form_with model: @transaction do |f| %>
  <table class="table table-striped table-bordered table-hover">
    <tbody>
    <tr>
      <th>送信先</th>
      <th>取引額</th>
      <th>取引理由</th>
      <th>パスワード</th>
    </tr>
      <td><%= f.select :uid, @uids %></td>
      <td><%= f.number_field :tyc, class: 'form-control' %></td>
      <td><%= f.text_field :reason, class: 'form-control' %></td>
      <td><%= f.text_field :password, class: 'form-control' %></td>
    </tbody>
    <%= f.submit %>
  </table>
<% end %>