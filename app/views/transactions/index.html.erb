<h1>Web版 TYC管理システム</h1>

<h2>おはようございます、<%= @username %> さん</h2>

<p class="notice"><small><%= session[:notice] %></small></p>
<% session[:notice] = nil # 念のため使い終わったら消す %>
<p class="alert"><small><%= session[:error] %></small></p>
<% session[:error] = nil # 念のため使い終わったら消す %>

<%= form_with model: @transaction do |f| %>
  <table class="table table-striped table-bordered table-hover">
    <tbody>
    <tr>
      <th>送信先</th>
      <th>取引額</th>
      <th>取引理由</th>
      <th>パスワード</th>
    </tr>
    <td><%= f.select :uid, @uids %></td>
    <td><%= f.number_field :tyc, class: 'form-control' %></td>
    <td><%= f.text_field :reason, class: 'form-control' %></td>
    <td><%= f.text_field :password, class: 'form-control' %></td>
    <td><%= f.submit '取引実行' %></td>
    </tbody>
  </table>
<% end %>

<style>
  .notice {
    color: #0084f0;
  }

  .alert {
    color: #df434f;
  }
</style>